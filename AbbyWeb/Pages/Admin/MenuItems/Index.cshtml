@page
@model AbbyWeb.Pages.Admin.MenuItems.IndexModel


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Menu Item List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="upsert" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Create New Menu Item
			</a>
		</div>
	</div>

	<br /><br />

	<table id="DT_load" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th class="text-black bg-white">
					Name
				</th>
				<th class="text-black bg-white">
					Price
				</th>
				<th class="text-black bg-white">
					Category
				</th>
				<th class="text-black bg-white">
					Food Type
				</th>
				<th class="bg-white"></th>
			</tr>
		</thead>
		
	</table>
</div>

@section Scripts {
	<script src="~/js/menuItem.js"></script>
}
